.user_warp{
  width:100%;
  height:100vh;
  position: relative;
}
image{
  width:100%;
  height:100%;
}
text{
  position: absolute;
  top:20rpx; 
  right:20rpx;
  color:#fff;
  border-radius: 20rpx;
  padding: 10rpx;
  background: #14141466;
  opacity:0.5;
  font-size: 25rpx;
}
.content{
  position: absolute;
  bottom: 20rpx; 
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10;
}
.content .content_box{
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #ffffff;
  width: 90%;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow:5px 0px 5px 5px #d3cece;
}

.content .content_box image{
  width: 200rpx;
  height: 150rpx;
  flex: 2;
  margin-right: 20rpx;
}
.content .content_box .content_text{
  flex: 3;

}
.content .content_box .content_text .advertising_title{
  font-size: 40rpx;
  font-weight: 550;
  display: flex;
  justify-content: left;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;

  -webkit-line-clamp: 1;  
  -webkit-box-orient: vertical;
}
.content .content_box .content_text .advertising_content{
  color: #46454566;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;  
  -webkit-box-orient: vertical;
  display: flex;
  justify-content: left;
}